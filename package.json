{
  "name": "node-postgres-starter",
  "version": "1.0.0",
  "description": "RESTful web service template using Node, TypeScript, and PostgreSQL",
  "author": "Matthew Laufer",
  "license": "MIT",
  "main": "dist",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "nodemon --exec \"ts-node\" src/index.ts",
    "debug": "nodemon --exec \"node --inspect -r ts-node/register\" src/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:int": "run-s test:int:setup test:int:run test:int:teardown",
    "test:int:setup": "NODE_ENV=test yarn run knex migrate:latest",
    "test:int:teardown": "NODE_ENV=test yarn run knex migrate:rollback --all",
    "test:int:run": "jest --runInBand -c jest.config.int.js",
    "test:int:watch": "run-s test:int:setup \"test:int:run --watch\"",
    "test:ci": "run-s \"test --ci --runInBand\" test:int",
    "open-coverage": "node ./scripts/open-coverage-report",
    "lint": "eslint --ext .ts src/",
    "prettier": "prettier --write '**/*.ts'",
    "prettier:check": "prettier --check '**/*.ts'",
    "ci:check": "run-s prettier:check lint test:ci build",
    "knex": "knex --knexfile ./src/db/knexfile.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@types/redis": "^2.8.32",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^6.1.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "pg-promise": "^10.11.1",
    "redis": "3.1.2",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.1",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.181",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "got": "11.8.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "knex": "^1.0.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "open": "^8.4.0",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  }
}
