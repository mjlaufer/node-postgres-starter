{
  "name": "node-postgres-starter",
  "version": "1.0.0",
  "description": "RESTful web service template using Node, TypeScript, and PostgreSQL",
  "main": "dist",
  "author": "Matthew Laufer",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register\" src/index.ts",
    "debug": "nodemon --exec \"node --inspect -r ts-node/register\" src/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:int": "run-s test:int:setup test:int:run test:int:teardown",
    "test:int:setup": "NODE_ENV=test yarn run knex migrate:latest",
    "test:int:teardown": "NODE_ENV=test yarn run knex migrate:rollback --all",
    "test:int:run": "jest --runInBand -c jest.config.int.js",
    "test:int:watch": "run-s test:int:setup \"test:int:run --watch\"",
    "test:ci": "run-s \"test --ci --runInBand\" test:int",
    "open-coverage": "node ./scripts/open-coverage-report",
    "lint": "eslint --ext .ts src/",
    "prettier": "prettier --write '**/*.ts'",
    "prettier:check": "prettier --check '**/*.ts'",
    "ci:check": "run-s prettier:check lint test:ci build",
    "knex": "knex --knexfile ./src/db/knexfile.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:ci && npm run build"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-redis": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "express-validator": "^6.4.0",
    "helmet": "^4.3.1",
    "joi": "^17.3.0",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg-promise": "^10.4.1",
    "redis": "^3.0.2",
    "uuid": "^8.3.2",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.16",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.15.16",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.19",
    "@types/joi": "^14.3.4",
    "@types/lodash": "^4.14.167",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.20",
    "@types/passport": "^1.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/redis": "^2.8.14",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.1.0",
    "got": "^11.8.1",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "knex": "^0.21.15",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "open": "^7.3.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
